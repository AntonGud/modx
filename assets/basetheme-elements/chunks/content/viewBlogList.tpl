<div class="wrap">
    <div class="project">
       <div class="cont span_2_of_3">
            <div class="about-left">
                <h3><a href="[[~[[+id]]]]">[[+pagetitle]]</a></h3>
            </div>
            <div class="blog-img"><a href="[[~[[+id]]]]"><img src="assets/basetheme-design/images/blog-img.jpg" alt="[[+pagetitle]]"/></a></div>
            <div class="blog">
                <div class="blogsidebar span_1_of_blog">
                    <ul class="blog-list">
                        <li>Posted on<br>[[*createdon:strtotime:date=`%Y-%m-%d`]]</li>
                    </ul>
                </div>
                <div class="cont span_2_of_blog">
                    <p>[[+introtext]]</p>
                </div>
                <div class="clear"></div>
            </div>
       </div>

    </div>
</div>
